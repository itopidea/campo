= render :partial => 'admin/nav'

#topics
  %table.data-table
    - @topics.each do |topic|
      %tr{:class => cycle("even", "odd")}
        %td= link_to truncate(topic.title), admin_topic_path(topic)
        %td= link_to topic.user.profile.name, admin_user_path(topic.user)
        %td.time= l topic.created_at, :format => :short
  = paginate_for @topics
